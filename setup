#!/bin/bash

architecture=$(dpkg --print-architecture)
device=$(uname -o)
SH=$(basename $SHELL)

main()
{

    cp system/termux/trash.${arch} $PREFIX/bin/trash
    if [[ ${SH} == *"bash"* ]]
    then
    echo "alias rm=\"trash \$@\"" >> ~/.bashrc
    elif [[ ${SH} == *"zsh"* ]]
    then
    echo "alias rm=\"trash \$@\"" >> ~/.zshrc
    fi
    echo "Installation complete.
    New parameters ::
    rm --about
    rm --clean
    rm --find <name>
    rm --recover <name>"
}

if [[ ${device} == *"Android"* ]]
then
case "$architecture" in
    aarch64)
        arch=aarch64
        ;;
    arm)
        arch=arm
        ;;
    armhf)
        arch=arm
        ;;
    esac

    main
else
case "$architecture" in
    amd64)
        arch=amd64
        ;;
    arm64)
        arch=arm64
        ;;
    esac

    main
fi


